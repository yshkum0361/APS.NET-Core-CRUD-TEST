@{
}

@model List<SecondASPcorePractice.Models.Entities.StudentEnroll>

<h1>Student List</h1>
<form method="post">
<table class="table">
    <thead>
        <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Subject</th>
        <th>Edit Record</th>

            <th>Delete Record</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
             <tr><td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Phone</td>
                <td>@student.Subject</td>
                <td><a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary">Edit</a></td>
                    <td><button asp-controller="Student" type="submit" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Delete</button></td>
             </tr>
        }
    </tbody>
</table>

</form>