@model SecondASPcorePractice.Models.AddStudent

<h1>Add Student</h1>
<form method="post">
<div class="mt-3">

    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name" />
</div>

<div class="mt-3">
    <label class="form-label">Phone </label>
    <input type="text" class="form-control" asp-for="Phone" />

</div>

<div class="mt-3">
    <label class="form-label">Subject</label>
    <input type="text" class="form-control" asp-for="Subject" />

</div>

    <div class="mt-3">
        <label class="form-check-label" for="Status">Registerd</label>
        <input type="checkbox" class="form-check-input" asp-for="Status" id="Status" />

    </div>



<div class="mt-3">

    <button type="submit" class="btn btn-primary">SAVE</button>
</div>
</form>